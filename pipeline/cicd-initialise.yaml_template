---
apiVersion: tekton.dev/v1beta1
kind: Task
metadata:
  name: run-infra-pipeline
  namespace: {{CI_NAMESPACE}}
spec:
  params:
    - name: script
      type: string
    - name: script_dir
      type: string
    - name: git_source_url
      type: string
    - name: git_target_url
      type: string
    - name: ci_namespace
      type: string
    - name: cd_namespace
      type: string
    - name: branch
      type: string
    - name: qmgr_name_1
      type: string
    - name: qmgr_name_2
      type: string
  workspaces:
    - name: git-ws
  steps:
    - name: run-script
      image: quay.io/openshift/origin-cli:latest
      script: |
        #!/bin/sh
        set -e
        set -x
        
        cd $(params.script_dir)
        ls -la .
        
        # Generate .env file with pipeline parameters
        cat <<EOF > pipeline.env
        git_source_url="$(params.git_source_url)"
        git_target_url="$(params.git_target_url)"
        ci_namespace="$(params.ci_namespace)"
        cd_namespace="$(params.cd_namespace)"
        branch="$(params.branch)"
        qmgr_name_1="$(params.qmgr_name_1)"
        qmgr_name_2="$(params.qmgr_name_2)"
        EOF
        
        echo "Generated env file:"
        cat pipeline.env
        
        chmod +x $(params.script)
        ./$(params.script) "pipeline.env"

---
apiVersion: tekton.dev/v1beta1
kind: Task
metadata:
  name: clone-git-task
  namespace: {{CI_NAMESPACE}}
spec:
  params:
    - name: git_source_url
      type: string
    - name: git_target_url
      type: string
    - name: branch
      type: string
      default: main      
  workspaces:
    - name: git-ws
  steps:
    - name: git-clone
      image: alpine/git
      script: |
        #!/bin/sh
        set -e
        set -x
        cd /workspace/git-ws
        git clone $(params.git_source_url) srcrepos        
        ls -la srcrepos
        git clone $(params.git_target_url) trgtrepos
        ls -la trgtrepos
